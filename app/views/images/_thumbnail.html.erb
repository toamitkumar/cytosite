<li class="selected" style="opacity: 1;">
    <a data-link="<%= data_link_for_image_tagging(thumbnail.id) %>" class="thumb" name="optionalCustomIdentifier" href="<%= ImageFile.url_to_image(thumbnail.id, thumbnail.format) %>" rel="history" data-caption="<%={'name' => thumbnail.name, 'descr' => thumbnail.description, 'category' => (thumbnail.category ? thumbnail.category.name : ""), 'id' => thumbnail.id}.to_json%>">
        <%= image_tag(ImageFile.url_to_thumbnail(thumbnail.id, thumbnail.format), :height => "75px", :width => "75px", :alt => "#{thumbnail.category_code} image") %>
    </a>
</li>
