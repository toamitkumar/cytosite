<% unless @images.empty? %>
  <div class="left" style="margin-right: 53px;">
    <label>Image:</label>
  </div>
  <div class="left">
    <% if @question.nil? %>
      <%= select_tag "question[image_id]", options_from_collection_for_select(@images, "id", "name") %>
    <% else %>
      <%= select_tag "question[image_id]", options_from_collection_for_select(@images, "id", "name", @question.image_id) %>
    <% end %>
  </div>
<% else %>
  <p class="justify">There are no images for this category in the tool yet.</p>
<% end %>