<% content_for :title, "New Question" %>
<br />
<h2>New Question</h2>
<div>
  <%= form_for Question.new, :url => questions_path do |f| %>
    <div>
      <div class="left" style="margin-right: 26px;">
        <%= f.label 'Question:' %>
      </div>
      <div class="left">
        <%= f.text_area :question, :rows => 2, :style => 'height: 70px;' %>
      </div>
    </div>
    <div class="clear"></div>
    <br />
    <div>
      <div class="left" style="margin-right: 25px;">
        <%= f.label 'Category:' %>
      </div>
      <div class="left">
        <%= f.select :category_code, @categories %>
      </div>
    </div>
    <div class="clear"></div>
    <br />
    <div>
      <div class="left" style="margin-right: 10px;">
        <%= f.label 'Explanation:' %>
      </div>
      <div class="left">
        <%= f.text_area :explanation, :style => 'height: 105px;' %>
      </div>
    </div>
    <div class="clear"></div>
    <br />
    <div class="left" style="margin-left: 500px; font-weight: bold">Correct Option</div>
    <div class="clear"></div>
    <div>
      <div class="left" style="margin-right: 28px;">
        <label>Option A:</label>
      </div>
      <div class="left">
        <input name="option0[option]" style="width: 398px" />
        <input type="radio" value="0" name="correct_option" style="margin-left: 50px;" />
      </div>
    </div>
    <div class="clear"></div>
    <br />
    <div>
      <div class="left" style="margin-right: 28px;">
        <label>Option B:</label>
      </div>
      <div class="left">
        <input name="option1[option]" style="width: 398px" />
        <input type="radio" value="1" name="correct_option" style="margin-left: 50px;" />
      </div>
    </div>
    <div class="clear"></div>
    <br />
    <div>
      <div class="left" style="margin-right: 28px;">
        <label>Option C:</label>
      </div>
      <div class="left">
        <input name="option2[option]" style="width: 398px" />
        <input type="radio" value="2" name="correct_option" style="margin-left: 50px;" />
      </div>
    </div>
    <div class="clear"></div>
    <br />
    <div>
      <div class="left" style="margin-right: 28px;">
        <label>Option D:</label>
      </div>
      <div class="left">
        <input name="option3[option]" style="width: 398px" />
        <input type="radio" value="3" name="correct_option" style="margin-left: 50px;" />
      </div>
    </div>
    <div class="clear"></div>
    <br />
    <%= f.submit 'Create', :style => 'margin-left: 418px;' %>
  <% end %>
</div>