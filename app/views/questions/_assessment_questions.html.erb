<% unless @questions.empty? %>
  <div class="left image_form_label">
    <label>Questions:</label>
  </div>
  <div class="left">
    <% (1..10).each do |indx| %>
      <div>
        <% if @assessment_questions.nil? %>
          <%= select_tag "questions[]", options_from_collection_for_select(@questions, "id", "question") %>
        <% else %>
          <%= select_tag "questions[]", options_from_collection_for_select(@questions, "id", "question", @assessment_questions[indx]) %>
        <% end %>
        <br />
        <br />
      </div>
    <% end %>
  </div>
<% else %>
  <div class="left image_form_label">
    <label>Questions:</label>
  </div>
  <div class="left">There are no questions for this category in the tool yet.</div>
<% end %>
<div class="clear"></div>