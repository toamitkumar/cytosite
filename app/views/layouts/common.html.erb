<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title><%= yield(:title) %></title>
    <%= stylesheet_link_tag 'screen', 'style', 'jquery.galleriffic' %>
    <!--[if lt IE 8]><%= stylesheet_link_tag 'ie', :media => 'all' %><![endif]-->
    <%= javascript_include_tag 'jquery-1.7', 'jquery-ui-1.8.16.min', 'jquery.jqtransform', 'rails', 'application', 'jquery.galleriffic', 'jquery.history', 'jquery.opacityrollover' %>
    <%= yield(:js_include) %>
    <%= csrf_meta_tag %>
  </head>
  <body class='<%=params[:controller].gsub('/','-') %> <%=params[:action] %>'>
    <%= render :partial => 'common/header' %>
    <div class="shadow box container">
      <div class="clear"></div>
      <%= render_flash %>
      <%= yield %>
    </div>
    <%= render :partial => 'common/footer' %>
  </body>
</html>