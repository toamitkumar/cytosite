<% content_for :title, "All Users" %>
<% content_for :js_include, javascript_include_tag('jquery.dataTables.min', 'users') %>
<br />
<h2>All Users</h2>
<div>
  <table id="questionsTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created On</th>        
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, edit_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.role == 'admin'? 'Administrator' : 'User'  %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d") unless user.created_at.nil? %></td>
        <td><%= link_to 'Delete', user_path(user.id), :method => :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>