<% content_for :title, "All Users" %>
<% content_for :js_include, javascript_include_tag('bootstrap-typeahead', 'users') %>
<h2>All Users</h2>
<div class="user_suggest top">
  <input type="text" class="typeahead" />
</div>
<div class="top">
  <table id="questionsTable" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created On</th>        
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, edit_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.role == 'admin'? 'Administrator' : 'User'  %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d") unless user.created_at.nil? %></td>
        <td><%= link_to 'Delete', user_path(user.id), :class => 'btn btn-danger', :method => :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>