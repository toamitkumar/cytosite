<% content_for :title, "User Settings" %>
<br />
<h2>User Settings</h2>
<% if @user.id == current_user.id %>
  <div>
    <%= form_for @user, :url => user_path do |f| %>
      <div>
        <div class="left" style="margin-right: 123px;">
          <%= f.label 'Name:' %>
        </div>
        <div class="left">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="clear"></div>
      <br />
      <div>
        <div class="left" style="margin-right: 126px;">
          <%= f.label 'Email:' %>
        </div>
        <div class="left">
          <%= f.text_field :email, :disabled => true %>
        </div>
      </div>
      <div class="clear"></div>
      <br />
      <% if current_user.admin? %>
        <div>
          <div class="left" style="margin-right: 132px;">
            <%= f.label 'Role:' %>
          </div>
          <div class="left">
            <%= f.select :role, [['Administrator', 'admin'], ['User', 'user']] %>
          </div>
        </div>
        <div class="clear"></div>
        <br />
      <% end %>
      <div>
        <div class="left" style="margin-right: 55px;">
          <%= f.label 'Current Password:' %>
        </div>
        <div class="left">
          <%= f.password_field :current_password %>
        </div>
      </div>
      <div class="clear"></div>
      <br />
      <div>
        <div class="left" style="margin-right: 100px;">
          <%= f.label 'Password:' %>
        </div>
        <div class="left">
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="clear"></div>
      <br />
      <div>
        <div class="left" style="margin-right: 25px;">
          <%= f.label 'Password Confirmation:' %>
        </div>
        <div class="left">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div class="clear"></div>
      <br />
      <%= link_to 'cancel', users_path, :style => 'margin-left: 271px;' %>
      <%= f.submit 'Save' %>
    <% end %>
  </div>
<% else %>
  <p class="justify">You do not have rights to access this page.</p>
  <%= link_to 'back to home page' , root_path  %>
<% end %>