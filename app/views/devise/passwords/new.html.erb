<div class="login">
  <div class="right sign_up">
    Not a member?&nbsp;<%= link_to "Sign up here!", new_registration_path(resource_name) %>
  </div>
  <div class="clear"></div>
  <h2>Forgot your password?</h2>
  <div class="login_content">
    <%= form_for(resource, :as => resource_name,
      :url => password_path(resource_name), 
      :html => {:class => 'jqtransform', :method => :post}) do |f| %>
      <div class="field">
        <div class="left label"><%= f.label :email %></div>
        <div class="left"><%= f.email_field :email %></div>
        <div class="clear"></div>
      </div>
      <div class="right sing_in_button">
        <%= f.submit :type => :image, :src => "/images/reset_passwd_button.png" %>
      </div>
      <div class="clear"></div>
    <% end %>
  </div>
  <div class="clear"></div>
</div>
<div class="right sign_in">
  Already a member?&nbsp;<%= link_to "Sign in here!", new_session_path(resource_name) %>
</div>