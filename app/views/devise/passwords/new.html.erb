<div class="span7 offset3">
  <div class="login_links">
    <div class="pull-right">
      Not a member?&nbsp;<%= link_to "Sign up here!",
        new_registration_path(resource_name) %>
    </div>
    <div class="clearfix"></div>
  </div>
  <h3 class="login_header">Forgot your password?</h3>
  <%= form_for(resource, :as => resource_name,
    :url => password_path(resource_name),
    :html => {:method => :post}) do |f| %>
    <div class="top">
      <div class="pull-left span2"><%= f.label :email %></div>
      <div class="pull-left span4"><%= f.email_field :email %></div>
      <div class="clearfix"></div>
    </div>
    <div class="span5">
      <div class="pull-right">
        <%= f.submit "Reset password", :class => 'btn' %>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="login_links login_page_top_border">
      <div class="pull-right">
        Already a member?&nbsp;<%= link_to "Sign in here!",
          new_session_path(resource_name) %>
      </div>
    </div>
  <% end %>
</div>
<div class="clearfix"></div>