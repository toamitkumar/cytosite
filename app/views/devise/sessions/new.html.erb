<div class="login" style="margin-bottom: 20px;">
  <div class="right sign_up">
    Not a member?&nbsp;<%= link_to "Sign up here!", new_registration_path(resource_name) %>
  </div>
  <div class="clear"></div>
  <h2>Log in to CytoSite</h2>
  <div class="login_content">
    <%= form_for(resource, :as => resource_name, :html => {:class => 'jqtransform'},
      :url => session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="left label"><%= f.label :email %></div>
        <div class="left"><%= f.email_field :email %></div>
        <div class="clear"></div>
      </div>
      <div class="field">
        <div class="left label"><%= f.label :password %></div>
        <div class="left"><%= f.password_field :password %></div>
        <div class="clear"></div>
      </div>
      <div class="remember_me">
        <div class="left label"><%= f.label :remember_me %></div>
        <div class="left"><%= f.check_box :remember_me %></div>
      </div>
      <div class="right sing_in_button">
        <%= f.submit :type => :image, :src => "/images/login.png" %>
      </div>
      <div class="clear"></div>
    <% end %>
    <div class="forgot_password">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
  </div>
</div>