<div class="login">
  <h2>Sign up</h2>
  <div class="login_content">
    <%= form_for(resource, :as => resource_name,
      :html => {:class => 'jqtransform', :method => :post},
      :url => registration_path(resource_name)) do |f| %>

      <div class="field">
        <div class="left label">
          <%= f.label :email %>
        </div>
        <div class="left">
          <%= f.email_field :email %>
        </div>
        <div class="clear"></div>
      </div>

      <div class="field">
        <div class="left label">
          <%= f.label :password %>
        </div>
        <div class="left">
          <%= f.password_field :password %>
        </div>
        <div class="clear"></div>
      </div>

      <div class="field">
        <div class="left label">
          <%= f.label :password_confirmation %>
        </div>
        <div class="left">
          <%= f.password_field :password_confirmation %>
        </div>
        <div class="clear"></div>
      </div>

      <div class="right sing_in_button">
        <%= f.submit :type => :image, :src => "/images/sign_up_btn.png" %>
      </div>
      <div class="clear"></div>
    <% end %>
  </div>

</div>
<div class="right sign_in">
  Already a member?&nbsp;<%= link_to "Sign in here!", new_session_path(resource_name) %>
</div>