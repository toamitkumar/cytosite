<div class="span7 offset3">
  <h3 class="login_header">Sign up</h3>
  <%= form_for(resource, :as => resource_name, :html => {:method => :post},
    :url => registration_path(resource_name)) do |f| %>
    <div class="top">
      <div class="pull-left span2"><%= f.label :email %></div>
      <div class="pull-left span2"><%= f.email_field :email %></div>
      <div class="clearfix"></div>
    </div>
    <div class="top">
      <div class="pull-left span2"><%= f.label :password %></div>
      <div class="pull-left span2"><%= f.password_field :password %></div>
      <div class="clearfix"></div>
    </div>
    <div class="top">
      <div class="pull-left span2"><%= f.label :password_confirmation %></div>
      <div class="pull-left span2"><%= f.password_field :password_confirmation %></div>
      <div class="clearfix"></div>
    </div>
    <div class="span5">
      <div class="pull-right">
        <%= f.submit "Sign up", :class => 'btn' %>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="login_links login_page_top_border">
      <div class="pull-right">
        Already a member?&nbsp;<%= link_to "Sign in here!", new_session_path(resource_name) %>
      </div>
    </div>
  <% end %>
</div>